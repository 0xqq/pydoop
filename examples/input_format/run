#!/usr/bin/env bash

set -euo pipefail
[ -n "${DEBUG:-}" ] && set -x
this="${BASH_SOURCE-$0}"
this_dir=$(cd -P -- "$(dirname -- "${this}")" && pwd -P)
. "${this_dir}/../config.sh"

CHK="import pydoop; hd_info = pydoop.hadoop_version_info(); print(hd_info.tuple >= (2, 2, 0) and hd_info.is_yarn())"
is_mrv2_ok=$("${PYTHON}" -c "${CHK}")

if [[ x${is_mrv2_ok} == xTrue ]]; then
    make submit_mrv2
else
    make submit_mrv1
fi
